<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/white"
        app:shape_radius="16dp">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close_pop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/iv_net"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/icon_smile"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_net"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="您确定要注销账号，并删除账号相关的所有数据吗？"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/tv_function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="操作一旦完成，不可恢复数据但你仍可用该手机号重新注册新的账号"
            android:gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="19dp"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_function"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <com.hjq.shape.view.ShapeButton
                android:id="@+id/sb_not"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="4"
                app:shape_solidColor="#E4E6EA"
                android:text="再想想"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:shape_radius="2dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="34dp"/>
            <com.hjq.shape.view.ShapeButton
                android:id="@+id/go_setting"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="6"
                app:shape_solidColor="#E32122"
                android:text="确定删除账号"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:shape_radius="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="34dp"/>
        </LinearLayout>

    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>