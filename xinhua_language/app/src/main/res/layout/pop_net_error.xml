<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/white"
        app:shape_radius="16dp">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close_pop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/iv_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_net_error"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_net"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="当前网络连接异常"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/command"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:text="请检查你的设备是否成功连接网络"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="如果你的网络正常，请尝试在手机设置中允许APP访问网络与蜂窝数据权限"
            android:gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="19dp"
            android:textSize="16sp"
            android:textColor="#63666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/command"
            android:layout_marginTop="15dp"/>
        <com.hjq.shape.view.ShapeButton
            android:id="@+id/go_setting"
            android:layout_width="116dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toBottomOf="@id/tv_function"
            app:shape_solidColor="#E32122"
            android:text="前往设置"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:shape_radius="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="34dp"/>
    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>