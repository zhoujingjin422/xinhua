<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:shape_radius="15dp"
        android:orientation="vertical"
        app:shape_solidColor="@color/white"
        app:shape_strokeColor="#FAFAFA"
        app:shape_strokeSize="1dp"
        android:elevation="2dp">
    <TextView
        android:id="@+id/tv_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_rename"
        android:text="重命名"
        android:drawablePadding="10dp"
        android:textColor="#24282E"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:gravity="center"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_share"
            android:text="分享"
            android:drawablePadding="10dp"
            android:textColor="#24282E"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_delete"
            android:text="删除"
            android:drawablePadding="10dp"
            android:textColor="#24282E"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D8D8D8"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#919396"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
    </com.hjq.shape.layout.ShapeLinearLayout>
</layout>